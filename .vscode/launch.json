                "debuggerPath": "vsdbg/vsdbg.exe",
                "quoteArgs": true
            },
            "request": "attach"
        },
        {
            "name": "Debug UnityExplorer support mod",
            "type": "coreclr",
            "processName": "Fer.al.exe",
            "preLaunchTask": "Build UnityExplorer support mod",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}/feraltweaks-bootstrap/run",
