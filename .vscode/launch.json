        {
            "name": "Debug CustomizationChat Mod",
            "type": "coreclr",
            "processName": "Fer.al.exe",
            "preLaunchTask": "Build CustomizationChat mod",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}/feraltweaks-bootstrap/run",
